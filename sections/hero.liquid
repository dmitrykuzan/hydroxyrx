{{ 'hero.css' | asset_url | stylesheet_tag }}

<section class="hero">
  <div class="hero__bg">
    <img
      src="{{ 'hydroxyrx-bg.webp' | asset_url }}"
      width="1920"
      height="1080"
      loading="eager"
      aria-hidden="true"
    >
  </div>
  <div class="hero__container page-width">
    <div class="hero__wrapper">
      <div class="hero__content">
        <div class="hero__text">
          <h1>
            <span
              class="text"
              data-aos="fade-down"
              data-aos-easing="ease-in-out-sine"
              data-aos-duration="600"
              data-aos-delay="1000"
              data-aos-once="true"
              >FEEL</span
            >
            <span
              class="text"
              data-aos="fade-right"
              data-aos-easing="ease-in-out-sine"
              data-aos-duration="600"
              data-aos-delay="1000"
              data-aos-once="true"
              >G
              <span
                class="smile"
                data-aos="flip-right"
                data-aos-easing="ease-out-cubic"
                data-aos-duration="800"
                data-aos-delay="1200"
                data-aos-once="true"
                >O</span
              >
              <span
                class="smile"
                data-aos="flip-left"
                data-aos-easing="ease-out-cubic"
                data-aos-duration="800"
                data-aos-delay="1400"
                data-aos-once="true"
                >O</span
              >D</span
            >
            <span
              class="text text-small"
              data-aos="fade-up"
              data-aos-easing="ease-in-out-sine"
              data-aos-duration="800"
              data-aos-delay="2000"
              data-aos-once="true"
              >FOR REAL</span
            >
