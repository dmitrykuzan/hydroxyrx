<script>
  document.addEventListener('DOMContentLoaded', function () {
     parallaxMouse({
      elements: '.hydroxy-hero-img-1',
      moveFactor: -20,
      wrap: '.hero',
    });

    parallaxMouse({
      elements: '.hydroxy-hero-img-2',
      moveFactor: -8,
      wrap: '.hero',
    });

      parallaxMouse({
      elements: '.hydroxy-hero-img-3',
      moveFactor: 25,
      wrap: '.hero',
    });


    //counter
    const counters = document.querySelectorAll('.counter-value');
    const speed = 800;

    counters.forEach((counter) => {
      const animate = () => {
        const value = +counter.getAttribute('akhi');
        const data = +counter.innerText;

        const time = value / speed;
        if (data < value) {
          counter.innerText = Math.ceil(data + time);
          setTimeout(animate, 1);
        } else {
          {% comment %} counter.innerText = value + '+'; {% endcomment %}
          counter.innerText = '20K+';
        }
      };

      animate();
    });

    AOS.init(
      {
        duration: 1200,
      }
    );
  });
</script>
