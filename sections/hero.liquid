            >
              <h2 class="hero__title section-title">Discover Premium 7-0H</h2>
              <h3 class="hero__subtitle">HYDROXY<span>Rx</span></h3>
            </div>

            {% for block in section.blocks %}
              {% if block.type == 'product' and block.settings.product %}
                {% assign product = block.settings.product %}
                <a
                  class="hero__product-link btn btn-blue"
                  href="{{ product.url }}"
                  >Shop now</a
                >
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <div
          class="hero__desktop-review"
        ></div>
      </div>

      <div class="hero__image-wrapper">
        <div class="hero__image mobile">
          <img
            src="{{ 'hydroxy-hero-3.webp' | asset_url }}"
            width="840"
