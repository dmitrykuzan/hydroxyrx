{{ 'about-hydroxy.css' | asset_url | stylesheet_tag }}

<section class="about-hydroxy page-width">
  <div class="about-hydroxy__wrapper">
    <div class="about-hydroxy-title">
      <h2>{{ section.settings.title }}</h2>
      <div class="about-hydroxy-logo">
        <img src="{{ 'hydroxy-logo.png' | asset_url }}" width="229" height="30" alt="logo hydroxyrx">
      </div>
    </div>

    <div class="about-hydroxy__body">
      <div class="about-hydroxy__content">
        <div class="about-hydroxy__content-description">
          {{ section.settings.description }}
        </div>

        <a class="about-hydroxy__link btn btn-blue" href="{{ all_products['7-hydroxymitragynine'].url }}"> Shop now </a>
      </div>
      {% if section.settings.image != blank %}
        <div class="about-hydroxy__image">
          <img
            src="{{ section.settings.image | image_url: width: 700 }}"
            width="700"
            height="530"
            loading="lazy"
            alt="Flower pictures"
          >
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Hydroxy",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Section description",
      "default": "<p>description</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section image"
    }
  ],
  "presets": [
    {
      "name": "About Hydroxy"
    }
  ]
}
{% endschema %}
