<section class="about-hydroxy page-width">
  <div class="about-hydroxy__block">
    <div class="about-hydroxy__wrapper">
      <div class="about-hydroxy__body">
        <div class="about-hydroxy__content">
          <div class="about-hydroxy__logo-circle">
            <img src="{{ 'your-logo.svg' | asset_url }}" alt="HydroxyRx logo" width="70" height="70">
          </div>

          <div class="hydroxy-benefits__titles">
            <h2 class="hydroxy-benefits__title" style="font-weight: 500 !important; margin-bottom: 2rem !important;">
              Discover HYDROXYRx
            </h2>
            <p class="hydroxy-benefits__subtitle">
              The World’s First Premium 7-OH Brand—Formulated for Clarity, Relief, and Trust.
            </p>
          </div>

          <div class="about-hydroxy__content-description">
            {{ section.settings.description }}
          </div>

          <a class="about-hydroxy__link btn btn-blue" href="{{ all_products['7-hydroxymitragynine'].url }}">Buy Now</a>
        </div>

        {% if section.settings.image != blank %}
          <div class="about-hydroxy__image">
            <img
              src="{{ section.settings.image | image_url: width: 700 }}"
              width="700"
              height="530"
              loading="lazy"
              alt="HydroxyRx Packaging"
            >
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
