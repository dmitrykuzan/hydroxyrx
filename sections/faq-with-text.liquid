{{ 'faq-with-image.css' | asset_url | stylesheet_tag }}

<div class="faq-with-image faq-with-text page-width">
  <div class="faq-with-image__wrapper">
    <div class="faq-with-image__text">
      <h2 class="faq-with-image__title">Frequently Asked Questions</h2>
      <p class="faq-with-image__subtitle">
        Weâ€™ve gathered the most important answers to help you make an informed choice.
      </p>

      {% if section.settings.pdf_url != blank %}
        <a class="pdf-link btn btn-blue" href="{{ section.settings.pdf_url }}" target="_blank" rel="noopener noreferrer"
          >View guide in PDF</a
        >
      {% endif %}
    </div>
    <ul class="faq">
      {% for block in section.blocks %}
        <li class="faq__item" {{ block.shopify_attributes }}>
          <h3 class="faq__item-title">{{ block.settings.title }}</h3>
          <div class="faq__item-text">
            <div class="faq__item-text-wrapper">
              {{ block.settings.text }}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "FAQ with text",
  "tag": "section",
  "settings": [
    {
      "type": "url",
      "id": "pdf_url",
      "label": "PDF link",
      "info": "Upload the PDF in Content > Files and paste the link here"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "FAQ Section (with text)",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "title": "What Are Alkaloids?"
          }
        }
      ]
    }
  ]
}
{% endschema %}
