{{ 'faq-with-image.css' | asset_url | stylesheet_tag }}

<div class="faq-with-image page-width">
  <div class="faq-with-image__wrapper">
    <div class="faq-with-image__picture">
      <img src="{{ 'hydroxyrx-faq.jpg' | asset_url }}" width="790" height="580" loading="lazy" alt="HydroxyRx">
    </div>
    <ul class="faq">
      {% for block in section.blocks %}
        <li class="faq__item" {{ block.shopify_attributes }}>
          <h3 class="faq__item-title">{{ block.settings.title }}</h3>
          <div class="faq__item-text">
            <div class="faq__item-text-wrapper">
              {{ block.settings.text }}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "FAQ Section (with image)",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "title": "What Are Alkaloids?"
          }
        }
      ]
    }
  ]
}
{% endschema %}
